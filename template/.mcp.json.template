{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": [
        "/path/to/@modelcontextprotocol/server-filesystem/dist/index.js",
        "."
      ],
      "_comment": "Install with: npm install -g @modelcontextprotocol/server-filesystem"
    },
    "github": {
      "command": "node", 
      "args": [
        "/path/to/@modelcontextprotocol/server-github/dist/index.js"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "_comment": "Install with: npm install -g @modelcontextprotocol/server-github. Set GITHUB_TOKEN in your environment."
    }
  },
  "_instructions": {
    "setup": [
      "1. Install MCP servers you want to use (e.g., npm install -g @modelcontextprotocol/server-filesystem)",
      "2. Update the paths in this file to point to the installed servers",
      "3. Set required environment variables (e.g., export GITHUB_TOKEN=your_token)",
      "4. Remove servers you don't need from this configuration"
    ],
    "optional_servers": {
      "gemini": {
        "install": "Follow instructions at: https://github.com/your-gemini-server",
        "env": "GEMINI_API_KEY"
      },
      "context7": {
        "install": "npm install -g context7-mcp-server",
        "env": "None required"
      }
    }
  }
}