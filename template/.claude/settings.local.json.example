{
  "comment": "This is an example of local settings. Copy to settings.local.json and customize.",
  "comment2": "settings.local.json is gitignored and won't be committed.",
  
  "development": {
    "test_on_save": true,
    "auto_fix_issues": false
  },
  
  "hooks": {
    "auto_format": {
      "enabled": false
    }
  },
  
  "ui": {
    "theme": "dark",
    "verbose_commands": true
  },
  
  "custom_commands": {
    "aliases": {
      "tf": "/dev:test --focus",
      "qr": "/dev:review --quick",
      "cs": "/git:commit --smart"
    }
  },
  
  "personal_preferences": {
    "author_name": "Your Name",
    "author_email": "your.email@example.com",
    "default_branch": "main"
  }
}