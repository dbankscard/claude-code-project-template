{
  "servers": {
    "filesystem": {
      "command": "mcp-server-filesystem",
      "args": {
        "root": ".",
        "extensions": [
          ".py",
          ".js",
          ".ts",
          ".jsx",
          ".tsx",
          ".json",
          ".yaml",
          ".yml",
          ".md",
          ".txt",
          ".env.example",
          ".gitignore"
        ],
        "ignore": [
          "node_modules",
          "__pycache__",
          ".git",
          ".pytest_cache",
          "*.pyc",
          "*.pyo",
          ".env",
          ".env.local",
          "venv",
          ".venv"
        ]
      }
    },
    "git": {
      "command": "mcp-server-git",
      "args": {
        "repository": ".",
        "safeBranches": ["main", "develop"],
        "allowedOperations": [
          "status",
          "diff",
          "log",
          "branch",
          "add",
          "commit",
          "push",
          "pull",
          "checkout",
          "merge"
        ]
      }
    },
    "github": {
      "command": "mcp-server-github",
      "args": {
        "token": "${GITHUB_TOKEN}",
        "owner": "${GITHUB_OWNER}",
        "repo": "${GITHUB_REPO}",
        "allowedOperations": [
          "issues",
          "pulls",
          "releases",
          "workflows"
        ]
      }
    }
  },
  "agentConfigs": {
    "planning-architect": {
      "servers": ["filesystem", "git", "github"]
    },
    "code-reviewer": {
      "servers": ["filesystem", "git"]
    },
    "test-engineer": {
      "servers": ["filesystem", "git", "test-runner"]
    },
    "security-auditor": {
      "servers": ["filesystem", "security-scanner", "dependency-checker"]
    },
    "documentation-specialist": {
      "servers": ["filesystem", "git", "docs-generator"]
    },
    "performance-optimizer": {
      "servers": ["filesystem", "profiler", "metrics"]
    },
    "master-orchestrator": {
      "servers": ["filesystem", "git", "github", "database"]
    }
  },
  "globalSettings": {
    "timeout": 30000,
    "retries": 3,
    "concurrentRequests": 5
  }
}